{% extends '::backend.html.twig' %}

{% block toolbarwrapper %}
{% endblock %}

{% block desktop -%}

		<!--modal-->
		<div class="modal fade" id="roleModalConfirm">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <a type="button" href="{{ path('role') }}" class="close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></a>
		        <h4 class="modal-title">Confirmation</h4>
		      </div>
		      <div class="modal-body">
		        <p>Are you sure you want to delete role '<label> {{ entity.label }} </label>' ?</p>
		      </div>
		      <div class="modal-footer">

			      <form action="{{ path('role_delete', {'id': entity.id}) }}" method="post" {{ form_enctype(delete_form) }}>
			        <!--Cancel-->
			        {# FIXME -- this needs to be improved, when "No" is selected user should be redirected to previous page, not to "role, this way, maybe performance can be improved as well" #}
			        <a type="button" class="btn btn-default" href="{{ path('role') }}">No</a>
			        <!--Delete-->
			        {{ form_widget(delete_form.submit, { 'attr': {
			        'class'	: 'btn btn-danger'
			        }}) }}

			      </form>

		      </div>
		    </div><!-- /.modal-content -->
		  </div><!-- /.modal-dialog -->
		</div><!-- /.modal -->

		<!--modifying data in modal window-->
		<script type="text/javascript">
		    $('#roleModalConfirm').modal('toggle')
		</script>	

{% endblock %}
