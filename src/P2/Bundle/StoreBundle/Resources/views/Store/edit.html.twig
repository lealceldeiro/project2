{% extends 'P2StoreBundle:Store:index.html.twig' %}

{% block breadcrumb -%}
{{ parent() }}
    <li class="active">
        Edit
    </li>
{% endblock %}

{% block desktop -%}

	{#flashbag messges #}
	{{ include('P2StoreBundle:Includes:flashbag.html.twig') }}

    {{ form_start(edit_form, { 'attr': {'role': 'form', 'class': 'form-horizontal'}} ) }}

    <div>
	    {# back #}
	    <a type="button" class="btn btn-sm btn-default margin-right-more" href="{{ path('store') }}">Back to list</a>

	    {# submit #}
		  {{ form_label(edit_form.submit) }}
		  {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}

		  {# delete #}
    	<a type="button" class="btn btn-sm btn-danger margin-left-more" href="{{ path('store_show_delete', { 'id': entity.id }) }}">Delete</a>
    </div>

    {# store name#}
    				{% if (form_errors(edit_form.name)) %}
				  	<div class="alert alert-danger alert-dismissible padding-t-b-less margin-top-more" role="alert">
					  	<button type="button" class="close" data-dismiss="alert">
					  	<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
					  	</button>
					  	{{ form_errors(edit_form.name) }}
					</div>
					{% endif %}

	  <div class="form-group {% if (form_errors(edit_form.name)) %} has-error {% endif %}">
		  {{ form_label(edit_form.name) }}
		  <div class="col-sm-10 margin-top-more">
		  	{{ form_widget(edit_form.name) }}
		  </div>
	  </div>

	{# store user#}
					{% if (form_errors(edit_form.storeUser)) %}
				  	<div class="alert alert-danger alert-dismissible padding-t-b-less" role="alert">
					  	<button type="button" class="close" data-dismiss="alert">
					  	<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
					  	</button>
					  	{{ form_errors(edit_form.storeUser) }}
					</div>
					{% endif %}
	  <div class="form-group {% if (form_errors(edit_form.storeUser)) %} has-error {% endif %}">
		  {{ form_label(edit_form.storeUser) }}
		  <div class="col-sm-10 margin-top-more">
		  	{{ form_widget(edit_form.storeUser) }}
		  </div>
	  </div>

	{# store password#}
					{% if (form_errors(edit_form.password.first)) %}
				  	<div class="alert alert-danger alert-dismissible padding-t-b-less" role="alert">
					  	<button type="button" class="close" data-dismiss="alert">
					  	<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
					  	</button>
					  	{{ form_errors(edit_form.password.first) }}
					</div>
					{% endif %}
	  <div class="form-group {% if (form_errors(edit_form.password.first)) %} has-error {% endif %}">
		  	{{ form_label(edit_form.password.first) }}
			<div class="col-sm-10 margin-top-more">
			  	{{ form_widget(edit_form.password.first) }}
			</div>
		  <div>
			{{ form_label(edit_form.password.second) }}
			<div class="col-sm-10 margin-top-more">
			  	{{ form_widget(edit_form.password.second) }}
			</div>
		  </div>
	  </div>

	{{ form_end(edit_form) }}

{% endblock %}

